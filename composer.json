{
    "name": "hh-com/creativecontao-bundle",
    "type": "contao-bundle",
    "description": "Bootstrap for Contao 4",
	"keywords": ["bootstrap", "contao4"],
    "homepage": "https://github.com/hh-com/creativecontao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Harald Huber",
            "homepage": "https://github.com/hh-com"
        }
    ],
    "require": {
        "php": "^7.0 || ^7.2",
        "contao/core-bundle": "^4.4",
        "symfony/framework-bundle": ">3.3"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.6",
        "leofeyer/optimize-native-functions-fixer": "^1.1",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^5.7.26",
        "symfony/phpunit-bridge": "^3.2"
    },
    "extra": {
        "contao-manager-plugin": "Hhcom\\CreativeContaoBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Hhcom\\CreativeContaoBundle\\": "src/"
        },
		"classmap": [
            "src/Resources/contao"
		],
		"exclude-from-classmap": [
			"src/Resources/contao/config",
            "src/Resources/contao/templates/",
			"src/Resources/contao/languages"
		]
    },
    "autoload-dev": {
        "psr-4": {
            "Hhcom\\CreativeContaoBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/hh-com/creativecontao-bundle/issues",
        "source": "https://github.com/hh-com/creativecontao-bundle"
    }
}
